.ms-staff-carousel
  margin 25px auto
  position relative
  .ms-view
    overflow visible
    background-color transparent
  .ms-nav-next
    background-position -6px -7px
    right -35px
    left auto
  .ms-staff-info
    text-align center
    margin 0 auto
    max-width 600px
    margin-top 30px
    min-height 300px
    color #222222
    h3
      font-weight 300
      font-size 22pt
      margin 0
    h4
      font-weight 300
      color #787878
      font-size 15pt
      margin 3px
  &.ms-round
    .ms-slide-bgcont
      border-radius 5000px
      border solid 8px rgb(230, 230, 230)
      margin 0 -8px
    .ms-view
      padding-bottom 8%
    .ms-nav-next
      left auto
      right -45px
  overflow
    hidden
      margin
        0
        !important
        .ms-staff-carousel
          .ms-nav-next
            right 0
  .ms-nav-prev
    left 0

.ms-staff-carousel .ms-nav-prev,
.ms-staff-carousel .ms-nav-next
  background url(http://www.masterslider.com/wp-content/plugins/masterslider/public/assets/css/templates/staff-arrows.png) white no-repeat -7px -57px
  width 35px
  height 40px
  left -35px
  margin-top -17px
  box-shadow 0px 1px 0px 0px rgb(190, 190, 190)
  position absolute
  top 50%
  cursor pointer

.ms-staff-carousel.ms-round .ms-nav-prev,
.ms-staff-carousel.ms-round .ms-nav-next
  background-color transparent
  box-shadow none
  left -45px

