.billboard-content
  border-radius 10px
  background #fff
  .cover
    margin-bottom 22px
    img
      width 100%
  .fancy-line
    border 0
    color #333
    border-bottom 1px solid #e0e0e0
    margin-top 56px
    margin-bottom 30px

.post
  color #777e83
  .title
    color #2f323b
    margin-top 10px
    margin-bottom 10px
    font-size 26px
    line-height 40px
  .date
    float right
    font-size 14px
    color #777e83
  .td
    position relative
    margin-bottom 18px
    margin-top -12px

.td-post-info
  text-align left
  position relative
  margin-top 30px
  .post-info
    padding 0

.fw
  width 100%

.content
  word-wrap break-word
  margin-bottom 40px
  padding-bottom 0
  font-size 18px
  color #333
  line-height 31px
  h2
    font-size 20px
    color #333
    line-height 1.6
    margin-top 15px
    margin-bottom 15px
  h3
    font-size 18px
    color #333
    line-height 1.6
    margin-top 10px
    margin-bottom 10px
  .description
    font-size 18px
    color #333
    line-height 32px
  img
    width 100%
    margin-top 10px
    margin-bottom 10px

.content a:link, .content a:visited, .content a:hover
  text-decoration none
  color #4cbdf7

.content-foot-holder
  height 20px
  margin-bottom 30px
  margin-top 0

.comments-count
  margin 40px 50px 5px 0
  font-size 18px
  font-weight 400

.download-content
  background #fff
  max-width 700px
  min-width 300px
  margin 0 auto
  display block

.download-banner
  width 100%
  height 60px
  background-color #fff
  .app-icon
    width 128px
    height 47px
    margin-top 7px
    margin-left 15px
  .app-download
    width 78px
    height 28px
    float right
    margin-top 17px
    margin-right 10px

.download-content-lg
  height 290px
  border-radius 10px
  text-align center
  margin-bottom 60px
  img
    width 143px
    height 143px
    position relative
    top 64px
  h3
    position relative
    top 37px
  p
    position relative
    top 47px
    color #5f5f5f

.download-content-sm
  .download-banner
    background-color rgba(45, 45, 45, .8)
    position fixed
    bottom 0

.wrapper-main
  margin-bottom 30px

.post-content-footer
  text-align left
  height 47px
  position relative
  padding-bottom 7px
  border-bottom #dedede solid thin
  p
    font-size 11px
    color #b4bfc6

.post-info
  position relative
  float left
  bottom 0
  left 0
  padding 15px 15px 15px 0

.ititle-serial
  width 24px
  height 24px
  background #f96e57
  font-size 14px
  line-height 24px
  text-align center
  border-radius 13px
  display inline-block
  font-weight 700
  color #fff
  margin-right 7px
  margin-top 3px
  position absolute

.ititle
  font-size 18px
  font-weight 700
  line-height 28px
  display inline-block
  padding-top 1px
  margin-left 30px

.item-info
  height 43px
  display block
  margin-bottom 40px
  clear both
  width 100%
  position relative
  &:before
    content ''
    display block
    background #d8d8d8
    width 4px
    height 90%
    position absolute
    top 5%
  .item-info-price
    display block
    color #f84e4e
    margin-right 20px
    line-height 1.3
    font-size 18px
    padding-left 11px
    float none
    height auto
    font-weight 400
  .item-like-info
    display block
    color #8e8e93
    margin-right 20px
    line-height 1.5
    font-size 14px
    padding-left 11px
  .item-info-link
    display table
    width 100px
    text-align center
    font-size 16px
    border solid thin #ff897d
    margin-top -40px
    float right
    height 32px
    line-height 32px
    border-radius 32px
    span
      display table-cell
      vertical-align middle
      color #f7554d
      font-size 15px

.icon-like
  background-repeat no-repeat
  &.like
    background url(http://static.liwushuo.com/static/web/img/icon_favorites_selected_35f43f3.png)
  &.active
    background-repeat no-repeat

.icon-share
  margin-top -3px
  background-repeat no-repeat

.icon-comment
  background-repeat no-repeat

.info-item
  span
    font-size 14px
    line-height 17px
    margin-left 5px
    color #333
    vertical-align middle

.share-list
  position relative
  float right
  bottom -7px
  right 0
  padding 0 0 6px
  line-height 34px
  white-space nowrap
  span
    display inline-block
    float left

.share-item
  float right
  width 50px
  height 34px
  a
    display block
    width 34px
    height 34px
    float right
    cursor pointer

.icon-weixin
  background-repeat no-repeat

.icon-qzone
  background-repeat no-repeat

.icon-qq
  background-repeat no-repeat

.icon-weibo
  background-repeat no-repeat

.comment-cell
  padding-top 20px
  clear both
  &:last-child
    .comment-body
      border-bottom 0
  .avatar
    display inline-block
    vertical-align top
    img
      width 48px
      height 48px
      border-radius 24px
  .comment-body
    display inline-block
    width 88.2%
    margin-left 2%
    padding-bottom 18px
    border-bottom solid #e0e0e0 1px
    .comment-content
      font-size 16px
      margin-bottom 5px
    .comment-operation
      width 90%
      font-size 14px
      color rgba(0, 0, 0, .3)
      .user-name
        display inline-block
        margin-right 30px
        line-height 24px
        height 24px
        vertical-align top
        max-width 240px
        text-overflow ellipsis
        white-space nowrap
        overflow hidden
      .post-time
        display inline-block
        width 120px
        line-height 26px
      .reply
        cursor pointer

.comments-area
  margin-left 50px
  margin-right 50px

.expand-reply
  display none

.comment-body
  &:hover
    .expand-reply
      display inline-block

.reply-editor
  width 100%
  border-radius 6px
  border solid #c8c7cc 1px
  height 100px
  margin-top 18px
  padding 10px
  box-sizing border-box

.submit-button
  height 32px
  display block
  margin-top 10px
  background #fff
  border solid thin #f84e4e
  text-align center
  width 88px
  border-radius 32px
  float right
  color #f84e4e
  font-size 16px

