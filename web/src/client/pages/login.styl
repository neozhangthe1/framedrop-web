.reg-block
  width 380px
  padding 20px
  margin 60px auto
  background #fff
  border-top solid 2px #72c02c
  p
    a
      text-decoration underline
      &:hover
        text-decoration none
  .input-group-addon
    color #bbb
    background none
    min-width 40px
  .form-control
    &:focus
      box-shadow none
      border-color #999
  .checkbox
    color #555
    margin-bottom 20px
    font-weight normal

.reg-block h2,
.reg-block p,
.reg-block p a
  color #777

.reg-block-header
  padding-bottom 5px
  margin-bottom 30px
  border-bottom solid 1px #eee
  h2
    font-size 28px
    text-align center
    margin-bottom 15px
  p
    text-align center

/*For Mobile Devices*/
@media (max-width: 500px) {
  .reg-block {
    width: 300px;
    margin: 60px auto;
  }
}
